<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCAAA4"
    android:padding="5dp"
    tools:context="tanvir.busmanagementsystem.BuyTicket">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="90dp"
                android:textColor="#FFFFFF"
                android:textSize="25sp"

                android:layout_width="wrap_content"
                android:text="Buy"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:text="Ticket ."
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="90dp"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:text="Seat : "
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/selectedSeatTV"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:text="A1 ,A2"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="90dp"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:text="Price : "
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/totalSeatPriceTV"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:text="450/-"
                android:layout_height="wrap_content" />


        </LinearLayout>





        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="40dp"

            android:layout_centerHorizontal="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/customerNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cusrtomer Name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_centerHorizontal="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:inputType="phone"
                android:id="@+id/customerMobileNoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cusrtomer Mobile Number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_centerHorizontal="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/customerEmailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cusrtomer Email" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:text="Seat Cancellable Token : "
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/ticketCancelTokenTV"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:text="45678"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <Button

            android:onClick="addSeatInfoInDatabase"
            android:layout_marginTop="10dp"
            android:text="Buy"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>

